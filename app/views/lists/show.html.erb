<h2><%= @list.name %></h2>

<button type="button" class="btn btn-light text-decoration-none"><%= link_to "go back to all lists", lists_path%></button>


<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>


<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"> <%= link_to bookmark.movie.title %>  </li>
    <li class="list-group-item"> <%= link_to bookmark.movie.overview %>  </li>
    <li class="list-group-item"> <%= link_to bookmark.movie.rating %>  </li>
    <li class="list-group-item"> <%= link_to bookmark.comment %>  </li>
    <li class="list-group-item"> <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%> </li>
  <% end %>
</ul>
